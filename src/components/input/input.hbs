{{#if common}}
<div class="base-input__wrapper">
  <label class="base-label" for="{{ key }}">{{ name }}</label>
  <input class="base-input" id="{{ key }}" name="{{ key }}" type="{{ type }}">
</div>
{{/if}}
{{#if settings}}
  <div class="settings-input__wrapper">
    <label class="settings-label" for="{{ key }}">{{ name }}</label>
    <input class="settings-input" id="{{ key }}" name="{{ key }}" {{#if readonly}} readonly='readonly'{{/if}} type="{{ type }}" value="{{ value }}">
  </div>
{{/if}}
